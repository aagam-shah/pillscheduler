<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/alarm_pillnname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingRight="40dp"
        android:text="Alarms"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/alarm_pillno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/alarm_pillnname"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <Button
        android:id="@+id/alarm_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_pillnname"
        android:text="Taken" />
     <Button
        android:id="@+id/alarm_nottaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/alarm_taken"
        android:layout_below="@+id/alarm_pillnname"
        android:text="Not Taken" />
  
</RelativeLayout>