<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="star.pillscheduler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />
<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
<uses-permission android:name="android.permission.CAMERA"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:hardwareAccelerated="true"
        
        android:label="@string/app_name"
        android:theme="@style/Pill" >
        <activity
            android:name="star.pillscheduler.MainActivity"
            
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
       <activity   
           android:screenOrientation="portrait"
           android:name=".addPill" android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.addPill" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
  
       <activity   android:name=".setTimings" android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.setTimings" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
  <activity   android:name=".EditOldPill" android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.EditOldPill" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
  
       <activity   android:name=".AlarmDialog"
           android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.AlarmDialog" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
        
        
        <receiver android:name=".PillAlarmReceiver" android:process=":remote" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
         <service android:enabled="true"  android:name=".PillService"></service>
    </application>

</manifest>
