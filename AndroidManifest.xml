<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="star.pillscheduler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="star.pillscheduler.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
       <activity   android:name=".addPill" android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.addPill" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
  
       <activity   android:name=".setTimings" android:label="@string/app_name">  
     <intent-filter> 
       <action android:name="star.pillscheduler.setTimings" />  
         <category android:name="android.intent.category.DEFAULT" />  
     </intent-filter>   
  </activity>
        
        
        <receiver android:name=".PillAlarmReceiver" android:process=":remote" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>
